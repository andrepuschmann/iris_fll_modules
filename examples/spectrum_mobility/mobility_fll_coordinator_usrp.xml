<?xml version="1.0" encoding="utf-8" ?>

<softwareradio name="radio1">

    <controller class="fll">
        <parameter name="fsmName" value=""/>
        <parameter name="dynamicParameter" value="rate=1000000,
                                                  freq0=1616000000,
                                                  freq1=1620000000,
                                                  freq2=1624000000,
                                                  numtrx=2,
                                                  reconfdelay=300,
                                                  puinactivitytimeout=2000,
                                                  pusensingtimeout=500,
                                                  bcinvalidationtimeout=500,
                                                  enginegdtpmodule=stackengine1,
                                                  componentgdtpmodule=alohamac0,
                                                  channelclientmodule=coordinatormobility1,
                                                  channelclientengine=stackengine1,
                                                  enginesensingmodule=phyengine3,
                                                  componentsensingmodule=metadatadetector2,
                                                  componentsensingmodule0=metadatadetector1,
                                                  componentsensingmodule1=metadatadetector2,
                                                  engineRxModule0=asd,
                                                  componentRxModule0=asd2,
                                                  engineTxModule0=asd,
                                                  componentTxModule0=asd2,
                                                  engineRxModule1=phyengine3,
                                                  componentRxModule1=usrprx1,
                                                  role=coordinator,
                                                  "/>
        <parameter name="dryrun" value="false"/>
        <parameter name="debug" value="true"/>
    </controller>

    <engine name="stackengine1" class="stackengine">

        <component name="coordinatormobility1" class="coordinatormobility">
            <parameter name="role" value="coordinator"/>
            <parameter name="updateinterval" value="1000"/>
            <port name="topport1" class="io"/>
            <port name="bottomport1" class="io"/>
        </component>

        <component name="tuntap0" class="tuntap">
          <parameter name="device" value="tun0"/>
          <parameter name="readfrombelow" value="true"/>
          <port name="bottomport1" class="io"/>
        </component>

        <component name="alohamac0" class="alohamac">
           <parameter name="localaddress" value="cord"/>
           <parameter name="destinationaddress" value="folw"/>
           <parameter name="acktimeout" value="0"/>
           <parameter name="maxretry" value="3"/>
           <port name="topport1" class="io"/>
           <port name="topport2" class="io"/>
           <port name="bottomport1" class="io"/>
        </component>

    </engine>
    

    <engine name="phyengine2" class="phyengine">

        <component name="liquidofdmmod1" class="liquidofdmmod">
            <parameter name="debug" value="false"/>
            <parameter name="subcarriers" value="64"/>
            <parameter name="prefixlength" value="16"/>
            <parameter name="modulation" value="qpsk"/>
            <port name="input1" class="input"/>
            <port name="output1" class="output"/>
        </component>

        <component name="signalscaler1" class="signalscaler">
            <parameter name="maximum" value="0.7"/>
            <parameter name="maxsamples" value="500"/>
            <port name="input1" class="input"/>
            <port name="output1" class="output"/>
        </component>

        <component name="usrptx1" class="usrptx">
            <parameter name="frequency" value="1616000000"/>
            <parameter name="rate" value="1000000"/>
            <parameter name="fixlooffset" value="1000000"/>
            <parameter name="antenna" value="TX/RX"/>
            <parameter name="gain" value="25"/>
            <parameter name="streaming" value="false"/>
            <parameter name="hasburstackevent" value="false"/>
            <port name="input1" class="input"/>
        </component>

    </engine>



    <!-- Sensing PHY -->
    <engine name="phyengine3" class="phyengine">

        <component name="usrprx1" class="usrprx">
          <parameter name="frequency" value="1616000000"/>
          <parameter name="rate" value="1000000"/>
          <parameter name="fixlooffset" value="1000000"/>
          <parameter name="antenna" value="RX2"/>
          <parameter name="gain" value="38"/>
          <port name="output1" class="output"/>
        </component>
        
        <component name="liquidofdmdemod2" class="liquidofdmdemod">
            <parameter name="debug" value="true"/>
            <parameter name="subcarriers" value="64"/>
            <parameter name="prefixlength" value="16"/>
            <port name="input1" class="input"/>
            <port name="output1" class="output"/>
        </component>

        <component name="metadatadetector2" class="metadatadetector">
            <parameter name="key" value="header"/>
            <parameter name="value" value="primary"/>
            <parameter name="interval" value="-1"/>
            <parameter name="hasevent" value="true"/>
            <parameter name="eventname" value="EvPuActiveSensingChannel"/>
            <parameter name="debug" value="true"/>
            <port name="input1" class="input"/>
            <port name="output1" class="output"/>
        </component>
    
        <component name="filerawwriter2" class="filerawwriter">
            <parameter name="filename" value="/dev/null"/>
            <port name="input1" class="input"/>
        </component>
    
    </engine>


    <!-- Stack layout -->
    <link above="coordinatormobility1.bottomport1" below="alohamac0.topport1" />
    <link above="tuntap0.bottomport1" below="alohamac0.topport2" />


    <!-- PHY Tx layout -->
    <link source="alohamac0.bottomport1" sink="liquidofdmmod1.input1" />
    <link source="liquidofdmmod1.output1" sink="signalscaler1.input1" />
    <link source="signalscaler1.output1" sink="usrptx1.input1" />

    
    <!-- Sensing PHY -->
    <link source="usrprx1.output1" sink="liquidofdmdemod2.input1" />
    <link source="liquidofdmdemod2.output1" sink="metadatadetector2.input1" />
    <link source="metadatadetector2.output1" sink="filerawwriter2.input1" />
    

</softwareradio>
